      script(src="./js/burger.js")
      script(src="./js/accord.js")
      script(src="./js/modal.js")
      //- script(src="./js/thanks.js")
      script(src="./js/libs/jquery.mask.min.js") 
      //- script(src='./js/libs/splide/dist/js/splide.min.js')
      script(src="./js/splide.js")
      script(src="./js/masks/input.js")

